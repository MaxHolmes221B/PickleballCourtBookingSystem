<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_230"
    android:background="@color/blue100"
    android:padding="@dimen/dp_5">

    <TextView
        android:id="@+id/tvCourtClusterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cụm sân: Pickle Ball ABC Khuất Duy Tiến Sân 1"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="123 Đường Khuất Duy Tiến, Phường Thanh Xuân Bắc, Quận Thanh Xuân, Hà Nội"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_location"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvCourtClusterName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTimeBooking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thời gian cập nhật: 01/01/2025"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvAddress"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/tvDateUse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ngày sử dụng:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvTimeBooking"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái: "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@id/tvPrice"
        app:layout_constraintEnd_toStartOf="@id/tvStatusValue" />
    <TextView
        android:id="@+id/tvStatusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang chờ duyệt"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@id/tvPrice"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng giá thuê sân: "
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingTop="4dp"
        app:layout_constraintBottom_toTopOf="@id/btnDetail"
        app:layout_constraintEnd_toStartOf="@id/tvPriceValue" />

    <TextView
        android:id="@+id/tvPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500,000đ"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dp_5"
        app:layout_constraintBottom_toTopOf="@id/btnDetail"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingTop="4dp"
        android:drawableStart="@drawable/ic_phone"
        android:text="0123456789"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDateUse" />

    <Button
        android:id="@+id/btnDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem chi tiết"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dp_5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
